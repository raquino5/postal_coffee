<h1>Checkout</h1>
<h2>Your Order Summary</h2>

<%= form_with model: @customer,
              url: orders_path,
              method: :post,
              local: true,
              data: { turbo: false },
              html: { class: "card p-4 mb-4" } do |f| %>

  <h3 class="mb-3">Customer Information</h3>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group mb-3">
        <%= f.label :first_name, "First name" %>
        <%= f.text_field :first_name, class: "form-control" %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group mb-3">
        <%= f.label :last_name, "Last name" %>
        <%= f.text_field :last_name, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="form-group mb-3">
    <%= f.label :email, "Email" %>
    <%= f.email_field :email, class: "form-control" %>
  </div>

  <div class="form-group mb-3">
    <%= f.label :address, "Address" %>
    <%= f.text_field :address, class: "form-control" %>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group mb-3">
        <%= f.label :city, "City" %>
        <%= f.text_field :city, class: "form-control" %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group mb-3">
        <%= f.label :province, "Province" %>
        <%= f.select :province,
                     [["Manitoba", "MB"],
                      ["Ontario", "ON"],
                      ["British Columbia", "BC"],
                      ["Quebec", "QC"],
                      ["Saskatchewan", "SK"]],
                     { include_blank: "Select province" },
                     class: "form-select" %>
      </div>
    </div>
  </div>

  <div class="form-group mb-4">
    <%= f.label :postal_code, "Postal code" %>
    <%= f.text_field :postal_code, class: "form-control" %>
  </div>

  <div class="d-flex align-items-center gap-3">
    <%= f.submit "Place Order", class: "btn btn-primary" %>

    <% if user_signed_in? %>
      <p class="mb-0 text-muted">
        We’re using your saved address from your account.
        You can update it in “Edit Account”.
      </p>
    <% end %>
  </div>

<% end %>
