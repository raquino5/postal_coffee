<h1>Your Shopping Cart</h1>

<p>
  <%= link_to "Continue Shopping", products_path,
        style: "padding: 0.5rem 1rem; background:#333; color:white; border-radius:4px; text-decoration:none;" %>
</p>

<% if @cart_items.any? %>
  <table border="1" cellpadding="8" cellspacing="0">
    <thead>
      <tr>
        <th>Product</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Line Total</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @cart_items.each do |item| %>
        <% product = item[:product] %>
        <tr>
          <td><%= link_to product.name, product_path(product) %></td>
          <td>$<%= product.price %></td>
          <td>
            <!-- EDIT QUANTITY -->
            <%= form_with url: update_item_cart_path, method: :patch, local: true do %>
              <%= hidden_field_tag :product_id, product.id %>
              <%= number_field_tag :quantity, item[:quantity], min: 0 %>
              <%= submit_tag "Update" %>
            <% end %>
          </td>
          <td>$<%= '%.2f' % item[:line_total] %></td>
          <td>
            <%= button_to "Remove",
                          remove_item_cart_path(product_id: product.id),
                          method: :delete,
                          data: { confirm: "Remove this item from cart?" } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <p><strong>Subtotal:</strong> $<%= '%.2f' % @subtotal %></p>

  <p><%= link_to "Proceed to Checkout", new_order_path %></p>
<% else %>
  <p>Your cart is empty.</p>
<% end %>
