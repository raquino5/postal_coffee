<h1><%= @category.name %></h1>

<div class="layout-with-sidebar">
  <aside class="sidebar">
    <%= render "shared/devise/product_sidebar", categories: @categories, cart_count: cart_count %>
  </aside>

  <section class="products-main">
    <% if @products.any? %>
      <div class="product-grid">
        <%= render @products %>
      </div>
      <div class="pagination-wrapper">
        <%= paginate @products %>
      </div>
    <% else %>
      <p>No products in this category.</p>
    <% end %>
  </section>
</div>
