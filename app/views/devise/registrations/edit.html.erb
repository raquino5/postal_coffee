<h1 class="mb-4">Edit Account</h1>

<div class="card p-4 mb-4">
  <h2 class="mb-3">Account Details</h2>

  <%= form_for(resource,
               as: resource_name,
               url: registration_path(resource_name),
               html: { method: :put }) do |f| %>

    <%= render "devise/shared/error_messages", resource: resource %>

    <!-- Email -->
    <div class="mb-3">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email,
            autofocus: true,
            autocomplete: "email",
            class: "form-control" %>
    </div>

    <hr class="my-4">

    <h3 class="mb-3">Address Information</h3>

    <!-- Address -->
    <div class="mb-3">
      <%= f.label :address, class: "form-label" %>
      <%= f.text_field :address,
            autocomplete: "street-address",
            class: "form-control" %>
    </div>

    <!-- City -->
    <div class="mb-3">
      <%= f.label :city, class: "form-label" %>
      <%= f.text_field :city,
            autocomplete: "address-level2",
            class: "form-control" %>
    </div>

    <!-- Postal code -->
    <div class="mb-3">
      <%= f.label :postal_code, class: "form-label" %>
      <%= f.text_field :postal_code,
            autocomplete: "postal-code",
            class: "form-control" %>
    </div>

    <!-- Province -->
    <div class="mb-3">
      <%= f.label :province_id, "Province", class: "form-label" %>
      <%= f.collection_select :province_id,
            Province.all,
            :id,
            :name,
            { include_blank: "Select province" },
            { required: true, class: "form-select" } %>
    </div>

    <hr class="my-4">

    <h3 class="mb-3">Change Password</h3>

    <!-- New password -->
    <div class="mb-3">
      <%= f.label :password, class: "form-label" %>
      <small class="text-muted d-block mb-1">
        (Leave blank if you donâ€™t want to change it)
      </small>
      <%= f.password_field :password,
            autocomplete: "new-password",
            class: "form-control" %>
    </div>

    <!-- Confirm new password -->
    <div class="mb-3">
      <%= f.label :password_confirmation, class: "form-label" %>
      <%= f.password_field :password_confirmation,
            autocomplete: "new-password",
            class: "form-control" %>
    </div>

    <!-- Current password -->
    <div class="mb-4">
      <%= f.label :current_password, class: "form-label" %>
      <small class="text-muted d-block mb-1">
        (We need your current password to confirm your changes)
      </small>
      <%= f.password_field :current_password,
            autocomplete: "current-password",
            class: "form-control" %>
    </div>

    <div class="d-flex align-items-center gap-2">
      <%= f.submit "Update", class: "btn btn-primary" %>
      <%= link_to "Back", root_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>

<div class="card p-4">
  <h3 class="text-danger mb-3">Cancel my account</h3>
  <p class="mb-3">
    This action cannot be undone.
  </p>

  <%= button_to "Cancel my account",
                registration_path(resource_name),
                method: :delete,
                data: { confirm: "Are you sure?" },
                class: "btn btn-danger" %>
</div>
